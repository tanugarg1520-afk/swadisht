---
import BaseLayout from "@/layouts/BaseLayout.astro";
import ContactForm from '@/components/ContactForm';
import { buttonVariants } from "@/components/ui/button";
import { Mail, Phone, MapPin } from 'lucide-react';
---

<BaseLayout
  title="Contact Us - Swadisht"
  description="Get in touch with Swadisht. We'd love to hear from you!"
>
  <div class="bg-accent/50 py-10">
    <div class="container">
      <h1 class="text-3xl md:text-4xl font-bold font-display mb-4">Contact Us</h1>
      <p class="text-muted-foreground max-w-2xl">
        Have questions, feedback, or need assistance? We're here to help. Reach out to us through any of the channels below.
      </p>
    </div>
  </div>

  <div class="container py-12">
    <div class="grid md:grid-cols-2 gap-12">
      <!-- Contact Information -->
      <div>
        <h2 class="text-2xl font-display font-semibold mb-6">Get In Touch</h2>
        
        <div class="space-y-6">
          <!-- Phone Number -->
          <div class="flex items-start">
            <div class="bg-primary/10 p-3 rounded-full mr-4">
              <Phone class="h-6 w-6 text-primary" />
            </div>
            <div>
              <h3 class="font-display font-medium text-lg">Phone</h3>
              <p class="text-muted-foreground mb-1">Call us directly</p>
              <a href="tel:+919548091747" class="text-primary hover:underline font-medium">+91 9548091747</a>
            </div>
          </div>
          
          <!-- Email -->
          <div class="flex items-start">
            <div class="bg-primary/10 p-3 rounded-full mr-4">
              <Mail class="h-6 w-6 text-primary" />
            </div>
            <div>
              <h3 class="font-display font-medium text-lg">Email</h3>
              <p class="text-muted-foreground mb-1">Send us an email</p>
              <a href="mailto:abhinavgarg240801@gmail.com" class="text-primary hover:underline font-medium break-all">abhinavgarg240801@gmail.com</a>
            </div>
          </div>
          
          <!-- Address -->
          <div class="flex items-start">
            <div class="bg-primary/10 p-3 rounded-full mr-4">
              <MapPin class="h-6 w-6 text-primary" />
            </div>
            <div>
              <h3 class="font-display font-medium text-lg">Location</h3>
              <p class="text-muted-foreground mb-1">Our head office</p>
              <address class="not-italic">
                Swadisht Food Delivery,<br>
                Main Street, Sector 12,<br>
                New Delhi, India
              </address>
            </div>
          </div>
        </div>
        
        <div class="mt-10">
          <h3 class="font-display font-medium text-lg mb-4">Business Hours</h3>
          <ul class="space-y-2">
            <li class="flex justify-between">
              <span>Monday - Friday:</span>
              <span class="font-medium">10:00 AM - 10:00 PM</span>
            </li>
            <li class="flex justify-between">
              <span>Saturday - Sunday:</span>
              <span class="font-medium">9:00 AM - 11:00 PM</span>
            </li>
            <li class="flex justify-between">
              <span>Holidays:</span>
              <span class="font-medium">9:00 AM - 11:00 PM</span>
            </li>
          </ul>
        </div>
      </div>
      
      <!-- Contact Form -->
      <div>
        <h2 class="text-2xl font-display font-semibold mb-6">Send Us a Message</h2>
        <ContactForm client:load />
      </div>
    </div>
    
    <!-- FAQ Section -->
    <div class="mt-16">
      <h2 class="text-2xl font-display font-semibold mb-6 text-center">Frequently Asked Questions</h2>
      
      <div class="grid md:grid-cols-2 gap-6 max-w-4xl mx-auto">
        <div class="bg-white p-6 rounded-xl shadow-sm border border-accent">
          <h3 class="font-display font-medium text-lg mb-2">How do I track my order?</h3>
          <p class="text-muted-foreground">
            After placing your order, you can track it in real-time through the "My Orders" section in your account dashboard.
          </p>
        </div>
        
        <div class="bg-white p-6 rounded-xl shadow-sm border border-accent">
          <h3 class="font-display font-medium text-lg mb-2">What is the delivery time?</h3>
          <p class="text-muted-foreground">
            Our standard delivery time is 30-45 minutes, depending on your location and the restaurant's distance.
          </p>
        </div>
        
        <div class="bg-white p-6 rounded-xl shadow-sm border border-accent">
          <h3 class="font-display font-medium text-lg mb-2">How can I cancel my order?</h3>
          <p class="text-muted-foreground">
            You can cancel your order within 5 minutes of placing it through the "My Orders" section or by contacting our customer support.
          </p>
        </div>
        
        <div class="bg-white p-6 rounded-xl shadow-sm border border-accent">
          <h3 class="font-display font-medium text-lg mb-2">Do you offer corporate meal plans?</h3>
          <p class="text-muted-foreground">
            Yes, we offer special corporate meal plans and bulk order discounts. Please contact our sales team for more information.
          </p>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>