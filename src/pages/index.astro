---
import BaseLayout from "@/layouts/BaseLayout.astro";
import SimpleLoginForm from '@/components/SimpleLoginForm';
import Logo from '@/components/Logo';
import { ShoppingCart, Utensils, Pizza, Map, Clock } from 'lucide-react';
---

<BaseLayout
  title="Swadisht - Delicious Meals Delivered"
  description="Order delicious tiffin, meals, and food online with Swadisht. Enjoy fast delivery, great taste, and excellent service."
>
  <!-- Hero Section with Login Form -->
  <section class="relative py-16 md:py-20 lg:py-28 overflow-hidden">
    <!-- Background Image with Overlay -->
    <div class="absolute inset-0 z-0 bg-cover bg-center bg-no-repeat" style="background-image: url('https://images.unsplash.com/photo-1742281257707-0c7f7e5ca9c6?w=1200&h=600&auto=format&fit=crop&q=80'); background-attachment: fixed;">
      <div 
        class="absolute inset-0 bg-gradient-to-r from-primary/90 to-secondary/90 mix-blend-multiply"
      ></div>
    </div>
    
    <div class="container relative z-10">
      <div class="grid md:grid-cols-2 gap-8 items-center">
        <!-- Left Content -->
        <div class="text-white">
          <div class="mb-6 inline-block">
            <Logo size="lg" />
          </div>
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold font-display mb-6 leading-tight">
            Har din ghar jesa swad<br />Delivered to Your Door
          </h1>
          <p class="text-white/90 text-lg md:text-xl mb-8 max-w-lg">
            Experience the convenience of having fresh, tasty meals delivered right to your doorstep. Sign up now to start your flavorful journey!
          </p>
          
          <!-- Feature Icons -->
          <div class="grid grid-cols-2 gap-4 max-w-md">
            <div class="flex items-center gap-2">
              <div class="bg-white/20 p-2 rounded-full">
                <Utensils class="w-5 h-5 text-white" />
              </div>
              <span class="text-sm md:text-base">Quality Ingredients</span>
            </div>
            <div class="flex items-center gap-2">
              <div class="bg-white/20 p-2 rounded-full">
                <Clock class="w-5 h-5 text-white" />
              </div>
              <span class="text-sm md:text-base">Quick Delivery</span>
            </div>
            <div class="flex items-center gap-2">
              <div class="bg-white/20 p-2 rounded-full">
                <ShoppingCart class="w-5 h-5 text-white" />
              </div>
              <span class="text-sm md:text-base">Easy Ordering</span>
            </div>
            <div class="flex items-center gap-2">
              <div class="bg-white/20 p-2 rounded-full">
                <Map class="w-5 h-5 text-white" />
              </div>
              <span class="text-sm md:text-base">Live Tracking</span>
            </div>
          </div>
        </div>
        
        <!-- Right Content - Login Form -->
        <div class="flex justify-center lg:justify-end">
          <!-- KEEP ALL FORMS client:load !! DO NOT USE client:visible AS THIS CAUSES HYDRATION ISSUES!!-->
          <SimpleLoginForm client:load />
        </div>
      </div>
    </div>
  </section>
  
  <!-- Features Section -->
  <section class="py-16 bg-accent/50">
    <div class="container">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold font-display mb-4">Why Choose Swadisht?</h2>
        <p class="text-muted-foreground max-w-2xl mx-auto">We combine the convenience of modern food delivery with the authentic taste of home-cooked meals.</p>
      </div>
      
      <div class="grid md:grid-cols-3 gap-8">
        <!-- Feature 1 -->
        <div class="bg-white p-6 rounded-xl shadow-sm border border-accent flex flex-col items-center text-center">
          <div class="bg-primary/10 p-4 rounded-full mb-4">
            <Pizza class="w-8 h-8 text-primary" />
          </div>
          <h3 class="text-xl font-semibold font-display mb-2">Diverse Menu</h3>
          <p class="text-muted-foreground">From light snacks to full meals, we offer a wide variety of dishes to satisfy your cravings.</p>
        </div>
        
        <!-- Feature 2 -->
        <div class="bg-white p-6 rounded-xl shadow-sm border border-accent flex flex-col items-center text-center">
          <div class="bg-primary/10 p-4 rounded-full mb-4">
            <Clock class="w-8 h-8 text-primary" />
          </div>
          <h3 class="text-xl font-semibold font-display mb-2">Fast Delivery</h3>
          <p class="text-muted-foreground">Our efficient delivery network ensures your food arrives hot and fresh, right when you need it.</p>
        </div>
        
        <!-- Feature 3 -->
        <div class="bg-white p-6 rounded-xl shadow-sm border border-accent flex flex-col items-center text-center">
          <div class="bg-primary/10 p-4 rounded-full mb-4">
            <ShoppingCart class="w-8 h-8 text-primary" />
          </div>
          <h3 class="text-xl font-semibold font-display mb-2">Easy Ordering</h3>
          <p class="text-muted-foreground">Our user-friendly platform makes ordering food a breeze, whether you're at home or on the go.</p>
        </div>
      </div>
    </div>
  </section>
  
  <!-- CTA Section -->
  <section class="py-16 bg-primary text-white">
    <div class="container">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-bold font-display mb-6">Ready to Experience Swadisht?</h2>
        <p class="text-white/80 mb-8 text-lg">Sign up now and get special offers on your first order!</p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="#" class="bg-white text-primary px-8 py-3 rounded-md font-medium hover:bg-white/90 transition-colors inline-flex items-center justify-center">
            Create Account
          </a>
          <a href="#" class="bg-transparent border border-white px-8 py-3 rounded-md font-medium hover:bg-white/10 transition-colors inline-flex items-center justify-center">
            View Menu
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
