---
import BaseLayout from "@/layouts/BaseLayout.astro";
import DishCard from "@/components/DishCard";
import { buttonVariants } from "@/components/ui/button";
import { Menu, ChefHat, Search, ArrowUpDown, Filter } from "lucide-react";
---

<BaseLayout
  title="Menu - Swadisht"
  description="Browse our delicious menu of light dishes, heavy dishes, and meals. Discover new flavors and order online."
>
  <div class="bg-accent/50 py-10">
    <div class="container">
      <h1 class="text-3xl md:text-4xl font-bold font-display mb-4">Our Menu</h1>
      <p class="text-muted-foreground max-w-2xl">
        Explore our wide range of delicious dishes prepared with love and care. From light snacks to hearty meals, 
        we have something for everyone.
      </p>
    </div>
  </div>

  <div class="container py-8">
    <!-- Search and Filter Section -->
    <div class="mb-8 flex flex-col md:flex-row gap-4 justify-between">
      <!-- Search Bar -->
      <div class="relative flex-1 max-w-lg">
        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
          <Search class="h-5 w-5 text-muted-foreground" />
        </div>
        <input 
          type="text" 
          placeholder="Search dishes..." 
          class="pl-10 pr-4 py-2 w-full border border-input rounded-md focus:outline-none focus:ring-2 focus:ring-primary/50"
        />
      </div>

      <!-- Filters -->
      <div class="flex gap-3">
        <button
          class={buttonVariants({ variant: 'outline', size: 'default' })}
        >
          <Filter class="h-4 w-4 mr-2" /> Filters
        </button>
        <button
          class={buttonVariants({ variant: 'outline', size: 'default' })}
        >
          <ArrowUpDown class="h-4 w-4 mr-2" /> Sort
        </button>
      </div>
    </div>

    <!-- Menu Categories Tabs -->
    <div class="border-b mb-8">
      <div class="flex overflow-x-auto -mb-px space-x-6">
        <button class="text-primary border-b-2 border-primary font-medium px-1 py-4 whitespace-nowrap">
          All Items
        </button>
        <button class="text-muted-foreground hover:text-foreground font-medium px-1 py-4 whitespace-nowrap">
          Light Dishes
        </button>
        <button class="text-muted-foreground hover:text-foreground font-medium px-1 py-4 whitespace-nowrap">
          Heavy Dishes
        </button>
        <button class="text-muted-foreground hover:text-foreground font-medium px-1 py-4 whitespace-nowrap">
          Meals
        </button>
        <button class="text-muted-foreground hover:text-foreground font-medium px-1 py-4 whitespace-nowrap">
          Special Offers
        </button>
      </div>
    </div>

    <!-- Light Dishes Section -->
    <div class="mb-12">
      <div class="flex items-center justify-between mb-6">
        <h2 class="text-2xl font-display font-semibold flex items-center gap-2">
          <ChefHat class="h-6 w-6 text-primary" /> Light Dishes
        </h2>
        <a 
          href="#" 
          class="text-primary text-sm font-medium hover:underline"
        >
          View All
        </a>
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
        <DishCard 
          client:load
          name="Vegetable Samosa"
          description="Crispy pastry filled with spiced potatoes and peas, served with mint chutney."
          price={80}
          imageUrl="https://images.unsplash.com/photo-1601050690597-df0568f70950?w=600&auto=format&fit=crop&q=80"
          isVeg={true}
          calories={220}
          rating={4.7}
        />
        <DishCard 
          client:load
          name="Paneer Tikka"
          description="Marinated cottage cheese cubes grilled to perfection with bell peppers and onions."
          price={180}
          imageUrl="https://images.unsplash.com/photo-1599487488170-d11ec9c172f0?w=600&auto=format&fit=crop&q=80" 
          isVeg={true}
          calories={320}
          rating={4.5}
        />
        <DishCard 
          client:load
          name="Chicken Kebab"
          description="Tender pieces of chicken marinated in spices and grilled to perfection."
          price={220}
          imageUrl="https://images.unsplash.com/photo-1603360946369-dc9bb6258143?w=600&auto=format&fit=crop&q=80"
          isVeg={false}
          calories={350}
          rating={4.8}
        />
        <DishCard 
          client:load
          name="Aloo Tikki"
          description="Spiced potato patties served with yogurt and tamarind chutney."
          price={100}
          imageUrl="https://images.unsplash.com/photo-1606491956689-2ea866880c84?w=600&auto=format&fit=crop&q=80"
          isVeg={true}
          calories={180}
          rating={4.3}
        />
      </div>
    </div>

    <!-- Heavy Dishes Section -->
    <div class="mb-12">
      <div class="flex items-center justify-between mb-6">
        <h2 class="text-2xl font-display font-semibold flex items-center gap-2">
          <ChefHat class="h-6 w-6 text-primary" /> Heavy Dishes
        </h2>
        <a 
          href="#" 
          class="text-primary text-sm font-medium hover:underline"
        >
          View All
        </a>
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
        <DishCard 
          client:load
          name="Butter Chicken"
          description="Tender chicken cooked in a rich tomato and butter gravy with aromatic spices."
          price={260}
          imageUrl="https://images.unsplash.com/photo-1603894584373-5ac82b2ae398?w=600&auto=format&fit=crop&q=80"
          isVeg={false}
          calories={450}
          rating={4.9}
        />
        <DishCard 
          client:load
          name="Paneer Butter Masala"
          description="Cottage cheese cubes simmered in a creamy tomato sauce with Indian spices."
          price={220}
          imageUrl="https://images.unsplash.com/photo-1631452180519-c014fe946bc7?w=600&auto=format&fit=crop&q=80"
          isVeg={true}
          calories={380}
          rating={4.6}
        />
        <DishCard 
          client:load
          name="Chicken Biryani"
          description="Fragrant basmati rice cooked with tender chicken pieces and aromatic spices."
          price={280}
          imageUrl="https://images.unsplash.com/photo-1589302168068-964664d93dc0?w=600&auto=format&fit=crop&q=80"
          isVeg={false}
          calories={520}
          rating={4.8}
        />
        <DishCard 
          client:load
          name="Dal Makhani"
          description="Creamy black lentils slow-cooked with butter and cream, finished with a touch of spices."
          price={190}
          imageUrl="https://images.unsplash.com/photo-1546833999-b9f581a1996d?w=600&auto=format&fit=crop&q=80"
          isVeg={true}
          calories={320}
          rating={4.5}
        />
      </div>
    </div>

    <!-- Special Offers Section -->
    <div>
      <div class="flex items-center justify-between mb-6">
        <h2 class="text-2xl font-display font-semibold flex items-center gap-2">
          <ChefHat class="h-6 w-6 text-primary" /> Special Offers
        </h2>
        <a 
          href="#" 
          class="text-primary text-sm font-medium hover:underline"
        >
          View All
        </a>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- Special Offer Card 1 -->
        <div class="bg-gradient-to-r from-primary/10 to-secondary/10 rounded-xl overflow-hidden border border-accent p-6 flex flex-col md:flex-row gap-6">
          <img 
            src="https://images.unsplash.com/photo-1585036561848-00a6d263dc25?w=600&auto=format&fit=crop&q=80" 
            alt="Family Meal Combo" 
            class="w-full md:w-1/3 h-48 md:h-auto object-cover rounded-lg"
          />
          <div class="flex-1">
            <span class="bg-primary text-white text-xs font-medium px-2 py-1 rounded-full">Limited Time</span>
            <h3 class="text-xl font-display font-bold mt-3 mb-2">Family Meal Combo</h3>
            <p class="text-muted-foreground mb-3">
              Get 2 main courses, 4 sides, and 2 desserts at a special price. Perfect for family gatherings!
            </p>
            <div class="flex justify-between items-center">
              <div>
                <span class="text-muted-foreground line-through">₹1200</span>
                <span class="font-bold text-primary text-xl ml-2">₹999</span>
              </div>
              <button class={buttonVariants({ variant: 'default' })}>
                Order Now
              </button>
            </div>
          </div>
        </div>

        <!-- Special Offer Card 2 -->
        <div class="bg-gradient-to-r from-primary/10 to-secondary/10 rounded-xl overflow-hidden border border-accent p-6 flex flex-col md:flex-row gap-6">
          <img 
            src="https://images.unsplash.com/photo-1567188040759-fb8a883dc6d6?w=600&auto=format&fit=crop&q=80" 
            alt="Weekend Brunch Special" 
            class="w-full md:w-1/3 h-48 md:h-auto object-cover rounded-lg"
          />
          <div class="flex-1">
            <span class="bg-secondary text-white text-xs font-medium px-2 py-1 rounded-full">Weekends Only</span>
            <h3 class="text-xl font-display font-bold mt-3 mb-2">Weekend Brunch Special</h3>
            <p class="text-muted-foreground mb-3">
              Enjoy a special weekend brunch menu with complimentary dessert. Available only on weekends!
            </p>
            <div class="flex justify-between items-center">
              <div>
                <span class="text-muted-foreground line-through">₹450</span>
                <span class="font-bold text-primary text-xl ml-2">₹349</span>
              </div>
              <button class={buttonVariants({ variant: 'default' })}>
                Order Now
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>